<form action='/place/add/product' method='post' class="form-vertical">

<input class="span12" type="text" name='name' placeholder="Name of the product:" autofocus>

<input class="span12" type="number" step="0.01" name='price' placeholder="Price of the product: " autofocus>

<input class="span12" type="number" min="0" name='weight' placeholder="Portion in grams: " autofocus>

<input class="btn btn-large btn-info" type='submit' value='Add'>